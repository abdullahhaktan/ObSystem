@{
    ViewBag.Title = "Derslerim";
    Layout = "~/Views/Shared/AkademisyenLayout.cshtml";
}

@using ObsSistem.Models.EntityFramework
@model List<dersModel1>

<html>
<head>
    <title>Dersler</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
    <div class="container mt-5" style="margin-left:50px;margin-bottom:50px">
        <div id="user-info">
            <h4>@Session["AkademisyenAdSoyad"]  hoşgeldiniz </h4>
        </div>
        <br />
        <h2 class="text-center mb-4">Akdemisyene Ait Dersler</h2>
        <table class="table table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>DERS ID</th>
                    <th>DERS AD</th>
                    <th>DERS KODU</th>
                    <th>KREDI</th>
                    <th>DERS YARI YIL</th>
                    <th>DERSI VEREN</th>
                    <th>DERS BOLUM</th>
                    <th>NOT GIRME</th>
                    
                    <th>YOKLAMA GİRME</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var ders in Model)
                {
                    <tr>
                        <td>@ders.DERS_ID</td>
                        <td>@ders.DERS_ADI</td>
                        <td>@ders.DERS_KODU</td>
                        <td>@ders.KREDI</td>
                        <td>@ders.DERS_YARI_YIL</td>
                        <td>@ders.BOLUM</td>
                        <td>@ders.DERSI_VEREN</td>
                        <td>
                            <form action=@Url.Action("notGirme","Akademisyen") method="post">
                                <input type="hidden" name="dersBolum" value="@ders.BOLUM" />
                                <input type="hidden" name="dersId" value="@ders.DERS_ID" />
                                <button type="submit">Not gir</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
</body>
</html>
