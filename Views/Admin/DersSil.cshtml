@{
    ViewBag.Title = "DersSil";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

@using ObsSistem.Models.EntityFramework
@model List<dersModel1>

<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>Ders Silme Sayfası</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>

    <div class="container mt-5" style="margin-left:50px;margin-bottom:50px">
        <h2 class="text-center mb-4">Ders Silme</h2>

        <table class="table table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">DERS_ID</th>
                    <th scope="col">DERS_AD</th>
                    <th scope="col">DERS_BOLUM</th>
                    <th scope="col">DERS_AKADEMISYEN</th>
                    <th scope="col">DERS_YARI_YIL</th>
                    <th scope="col">DERS_KREDI</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var ders in Model)
                {
                    <tr>
                        <td>@ders.DERS_ID</td>
                        <td>@ders.DERS_ADI</td>
                        <td>@ders.BOLUM</td>
                        <td>@ders.DERSI_VEREN</td>
                        <td>@ders.DERS_YARI_YIL</td>
                        <td>@ders.KREDI</td>
                    </tr>
                }
            </tbody>
        </table>
        <form method="post" action="@Url.Action("dersSil", "Admin")" style="width:50%">
            <br />
            <label for="ders">Lütfen silmek istediğiniz dersin id'sini giriniz</label>

            <input style="margin-bottom:100px" type="text" name="ders" required />
            <input type="submit" name="name" required />

        </form>
    </div>
    <script>
    </script>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

</body>
</html>
